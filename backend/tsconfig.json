{
  "compilerOptions": {
    "baseUrl": "src", // <- Esto permite que "@" apunte a la carpeta "src"
    "paths": {
      "@/*": ["*"]
    },
    "target": "ES2020",
    "module": "CommonJS",
    "rootDir": "src",
    "outDir": "dist",
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "strict": true,
    "skipLibCheck": true
  }
}
